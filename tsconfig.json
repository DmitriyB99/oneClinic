{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Разрешение сборки при наличии ошибок
    "noEmitOnError": false, // Разрешение сборки при наличии ошибок
    "noStrictGenericChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // Разрешение сборки при наличии ошибок
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": ["src/shared/config/types.d.ts" ]
}
